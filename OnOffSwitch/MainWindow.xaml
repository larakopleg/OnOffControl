<Window x:Class="OnOffSwitch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnOffSwitch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged">

    <Grid>
        <local:OnOffUserControl x:Name="OnOffUserControl" IsOn="{Binding Path=Value, Mode=TwoWay}" Margin="272,82,220,211" Height="Auto" Width="Auto"/>
    </Grid>
</Window>
